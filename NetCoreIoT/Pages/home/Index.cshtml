@page
@model NetCoreIoT.Pages.home.IndexModel
@{
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8" />
    <title>IoT管理系统 - 后台主页</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <style>
        body {
            font-family: "微软雅黑", Arial, sans-serif;
        }

        .layui-layout-admin .layui-header {
            background-color: #4a90e2;
            color: white;
        }

            .layui-layout-admin .layui-header a {
                color: white;
                font-weight: bold;
            }

        .layui-side {
            background-color: #2f4056;
        }

            .layui-side .layui-nav-tree .layui-nav-item > a {
                color: #bfcbd9;
            }

                .layui-side .layui-nav-tree .layui-nav-item > a:hover,
                .layui-side .layui-nav-tree .layui-nav-item.layui-this > a {
                    color: #fff;
                    background-color: #1e9fff;
                }

        .layui-layout-admin .layui-body {
            padding: 20px;
            background: #f2f2f2;
            min-height: 600px;
        }

        .dashboard-box {
            background: #fff;
            border-radius: 6px;
            padding: 20px;
            box-shadow: 0 1px 4px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }

        .dashboard-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 15px;
            color: #333;
        }

        html, body {
            height: 100%;
            margin: 0;
        }

        .layui-body iframe {
            width: 100%;
            height: 100%;
            border: none;
        }
    </style>
</head>
<body>
    <div class="layui-layout layui-layout-admin">
        <!-- 头部 -->
        <div class="layui-header">
            <div class="layui-logo">IoT管理系统</div>
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <a href="javascript:;">
                        <img src="https://img2.baidu.com/it/u=3464552987,1770358350&fm=253&fmt=auto&app=138&f=JPEG?w=64&h=64" class="layui-nav-img" />
                        Admin
                    </a>
                    <dl class="layui-nav-child">
                        <dd><a href="javascript:;">个人资料</a></dd>
                        <dd><a href="javascript:;">切换账号</a></dd>
                        <dd><a href="javascript:;">退出登录</a></dd>
                    </dl>
                </li>
            </ul>
        </div>

        <!-- 侧边栏 -->
        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                <ul class="layui-nav layui-nav-tree" lay-filter="side-menu" style="border:none;">
                    <li class="layui-nav-item layui-this">
                        <a href="javascript:;" lay-id="dashboard">仪表盘</a>
                    </li>
                    <li class="layui-nav-item">
                        <a href="javascript:;">设备管理</a>
                        <dl class="layui-nav-child">
                            <dd><a href="javascript:;" lay-id="device-list">设备列表</a></dd>
                            <dd><a href="javascript:;" lay-id="device-add">添加设备</a></dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item">
                        <a href="javascript:;">用户管理</a>
                        <dl class="layui-nav-child">
                            <dd><a href="javascript:;" lay-id="user-list">用户列表</a></dd>
                            <dd><a href="javascript:;" lay-id="user-role">角色管理</a></dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item">
                        <a href="javascript:;" lay-id="settings">系统设置</a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- 主体内容 -->
        <div class="layui-body">
            <iframe id="mainFrame" src="dashboard"></iframe>
        </div>

        <!-- 底部 -->
        <div class="layui-footer" style="text-align:center; padding:10px 0; background:#f2f2f2;">
            © 2025 IoT管理系统 版权所有
        </div>
    </div>

    <script src="~/lib/layui/layui.js"></script>
    <script>
        layui.use(['element', 'jquery'], function () {
            var $ = layui.jquery;
            var element = layui.element;

            const pageMap = {
                "dashboard": "dashboard",
                "device-list": "/pages/device-list.html",
                "device-add": "/pages/device-add.html",
                "user-list": "/pages/user-list.html",
                "user-role": "/pages/user-role.html",
                "settings": "/pages/settings.html"
            };

            $('.layui-nav-tree a').on('click', function () {
                var id = $(this).attr('lay-id');
                if (id && pageMap[id]) {
                    $('#mainFrame').attr('src', pageMap[id]);
                }
            });
        });
    </script>

</body>

</html>
